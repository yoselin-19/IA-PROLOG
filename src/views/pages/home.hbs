        <br>
        <div class="row">
            <div class="col col-md-22">
                El <input name="nombre_animal" placeholder="Nombre del animal"/> posee esas caracteristicas. 
                <button type="submit" class="btn btn-info">Consultar</button>
            </div>

        </div>
        <br>
        <div class="row">
            <div class="col col-md-22">
                <h3>Resultado:</h3>
                <br>
                {{#if tValor}}
                    {{!-- Cuando tiene que mostrar solo true o false --}}
                {{else}}
                    <table class="table">
                        {{#each animales}}
                            <p>{{this}}</p>
                        {{/each}}
                    </table>
                    {{!-- Cuando tiene que mostrar la tabla de contenido --}}
                {{/if}}
            </div>

        </div>

    </div>
</form>

 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script>
        $(function () {
            $("#busquedaForm").on("submit", function (e) {
                e.preventDefault();
                var f = $(this);
                var formData = new FormData(document.getElementById("busquedaForm"));
                var url = f.attr('action');      
            $.ajax({
                type: "POST",
                url: '/consultar',
                data: f.serialize(), // serializes the form's elements.
                success: function(data)
                {
                    alert(data); // show response from the php script.
                }
                });

            });
        });
    </script>